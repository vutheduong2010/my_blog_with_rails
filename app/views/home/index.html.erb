<div class="jumbotron text-center">
  <h3>WELCOME TO MY BLOG!</h3>
</div>

<div class="row">
    <% @posts.each do |post| %>
        <div class="col-sm-4">
            <h3><%= post.title %></h3>
            <p><%= truncate(post.content, length:150) %></p>
            <p><%= link_to 'Read more', post_path(post) %></p>
        </div>
    <% end %>
</div>
